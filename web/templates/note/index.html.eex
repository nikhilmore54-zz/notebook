<%= if @current_user.id == @user.id do %>
  <h1>My Notes</h1>
  <%= link "Create new", to: user_note_path(@conn, :new,
                                            @current_user) %>
<%= else %>
  <h1><%= @user.name %>'s Notes</h1>
<% end %>

<ul>
  <%= for note <- @notes do %>
    <li>
      <%= link note.title, to: user_note_path(@conn, :show, note.user, note) %>
    </li>
  <% end %>
</ul>
